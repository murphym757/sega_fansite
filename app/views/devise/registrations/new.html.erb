<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<header class="formpage">
  <div class="row">
    <div class="signUpForm">
      <div class="panel panel-default">
        <div class="panel-heading">Sign Up</div>
      </div>
      <div class="panel-body">
        <div class="formfield">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
        </div>

        <div class="formfield">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
        </div>

        <div class="formfield">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign Up", class: "btn btn-sp", method: :get%>
        </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</header>
