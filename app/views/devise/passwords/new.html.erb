<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>

<header class="formpage">
  <div class="row">
    <div class="passwordsNewForm">
      <div class="panel panel-default">
        <div class="panel-heading">Forgot your password?</div>
      </div>
      <div class="panel-body">
        <div class="formfield">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-sp"  %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</header>
