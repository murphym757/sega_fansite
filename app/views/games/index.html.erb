<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="sega">Sega</h1>
                    <h1 class="paradise">Paradise</h1>
                </div>
                <% @games.each do |game| %>
                <div class="col-xs-6 col-md-3">
                  <div class="thumbnail">
                    <%= link_to (image_tag game.image.url(:medium), class: 'image'), game %>
                  </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>


    <% if user_signed_in? %>
    <% else %>
    <div class="jumbotron-inverse">
      <p class="jumbo-info">This is a place of digital nastalgia. If you've ever played the Sega Genesis (and loved it), you will absolutely love
      this website. Please feel free to create an account and add as many games as you want to the collection.</p>
      <p class="jumbo-button">
        <%= link_to "Sign Up To Add A Game", new_user_registration_path, class: "btn btn-primary btn-lg" %>
      </p>
    </div>
    <% end %>


